<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>ktor-hosts</artifactId>
        <groupId>org.jetbrains.ktor</groupId>
        <version>0.4.0-SNAPSHOT</version>
    </parent>

    <artifactId>ktor-netty</artifactId>

    <properties>
        <netty.version>4.1.12.Final</netty.version>
        <tcnative.version>2.0.5.Final</tcnative.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jetbrains.ktor</groupId>
            <artifactId>ktor-test-host</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.ktor</groupId>
            <artifactId>ktor-hosts-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty-codec-http2</artifactId>
            <version>${netty.version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.jetty.alpn</groupId>
            <artifactId>alpn-api</artifactId>
            <version>1.1.3.v20160715</version>
        </dependency>

        <dependency>
            <groupId>org.jetbrains.ktor</groupId>
            <artifactId>ktor-core</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <!-- Netty Tomcat Native port -->

        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty-tcnative</artifactId>
            <version>${tcnative.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- https://mvnrepository.com/artifact/io.netty/netty-tcnative-boringssl-static -->
        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty-tcnative-boringssl-static</artifactId>
            <version>${tcnative.version}</version>
            <scope>test</scope>
        </dependency>
        <!-- https://mvnrepository.com/artifact/io.netty/netty-tcnative-boringssl-static -->
        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty-tcnative-boringssl-static</artifactId>
            <version>${tcnative.version}</version>
            <classifier>${tc.native.classifier}</classifier>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jetty-alpn</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>compile</phase>
                        <configuration>
                            <includeArtifactIds>alpn-boot</includeArtifactIds>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-tcnative</id>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <phase>compile</phase>
                        <configuration>
                            <outputDirectory>${build.directory}/dependency</outputDirectory>
                            <includeArtifactIds>netty-tcnative,netty-tcnative-boringssl-static</includeArtifactIds>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                    <!--<argLine>-XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=${build.directory}/oom.hprof</argLine>-->
                    <argLine>-Xmx1g -Dio.netty.leakDetectionLevel=PARANOID</argLine>
                </configuration>

                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>

                        <configuration>
                            <systemProperties>
                                <enable.http2>false</enable.http2>
                            </systemProperties>

                            <classpathDependencyExcludes>
                                <exclude>io.netty:netty-tcnative-boringssl-static</exclude>
                                <exclude>io.netty:netty-tcnative</exclude>
                            </classpathDependencyExcludes>
                        </configuration>
                    </execution>

                    <execution>
                        <id>run-with-http2</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>

                        <configuration>
                            <systemProperties>
                                <enable.http2>true</enable.http2>
                            </systemProperties>
                            <argLine>-Xmx1g -Xbootclasspath/p:${build.directory}/dependency/alpn-boot.jar</argLine>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>tcnative-linux</id>
            <activation>
                <os>
                    <name>linux</name>
                </os>
            </activation>
            <properties>
                <tc.native.classifier>linux-x86_64</tc.native.classifier>
            </properties>
        </profile>
        <profile>
            <id>tcnative-osx</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <tc.native.classifier>osx-x86_64</tc.native.classifier>
            </properties>
        </profile>
        <profile>
            <id>tcnative-windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <tc.native.classifier>windows-x86_64</tc.native.classifier>
            </properties>
        </profile>
    </profiles>
</project>